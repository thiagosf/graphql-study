{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "sourceMap": true,
    "pretty": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "target": "es6",
    "allowJs": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
