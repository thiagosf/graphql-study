{
  "name": "graphql-study",
  "version": "1.0.0",
  "description": "GraphQL study",
  "main": "src/app.ts",
  "scripts": {
    "dev": "nodemon --no-deprecation --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/app.ts",
    "lint": "tslint -c tslint.json 'src/**/*.ts' --fix",
    "test": "mocha --no-deprecation --timeout 10000 --require ts-node/register **/*.spec.ts",
    "build": "gulp",
    "coverage": "nyc --reporter=text mocha --no-deprecation --timeout 10000 dist/test/*.spec.js -x dist/test/*.spec.js",
    "dockerStart": "cd scripts && chmod 777 dockerCompose.sh && ./dockerCompose.sh && cd ..",
    "dockerStop": "docker-compose down"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thiagosf/graphql-study.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/thiagosf/graphql-study/issues"
  },
  "homepage": "https://github.com/thiagosf/graphql-study#readme",
  "devDependencies": {
    "gulp": "^4.0.0",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-typescript": "^5.0.0",
    "typescript": "^3.2.2",
    "nodemon": "^1.18.9",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "tslint-eslint-rules": "^5.4.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-http": "3.0.0",
    "mocha": "^5.2.0",
    "mocha-typescript": "^1.1.17",
    "sinon": "^7.2.2",
    "nyc": "^13.1.0"
  },
  "dependencies": {
    "@types/node": "^10.12.15",
    "bcrypt-nodejs": "0.0.3",
    "bluebird": "^3.5.3",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "helmet": "^3.15.0",
    "jsonwebtoken": "^8.4.0",
    "mongoose": "^5.4.0",
    "winston": "2.4.0"
  }
}
